<!-- style sheet tags -->
<element name="stylesheet">
   <parent name=""/>
   <attribute name="last-modified" use="optional" type="integer"/>
</element>
<element name="output">
   <parent name="stylesheet" occurs="det"/>
   <attribute name="mime" type="string"/>
</element>
<element name="param">
   <parent name="stylesheet"/>
   <attribute name="name" type="string"/>
   <attribute name="use" use="optional" type="string"/>
   <attribute name="type" use="optional" type="string"/>
</element>
<element name="with-data">
   <attribute name="bean" type="string"/>
   <attribute name="select" use="optional" type="string"/>
</element>
<element name="for-each">
   <attribute name="select" type="string"/>
</element>
<element name="sort">
   <parent name="for-each"/>
   <attribute name="select" type="string"/>
   <attribute name="order" use="optional" type="string"/>
</element>
<element name="value-of">
   <attribute name="select" type="string"/>
</element>
<element name="if">
   <attribute name="test" type="string"/>
</element>
<element name="choose"/>
<element name="when">
   <parent name="choose" occurs="multi"/>
   <attribute name="test" type="string"/>
</element>
<element name="otherwise">
   <parent name="choose" occurs="semidet"/>
</element>